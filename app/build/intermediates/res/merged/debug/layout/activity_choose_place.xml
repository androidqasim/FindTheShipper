<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_city"
    tools:context="com.minh.findtheshipper.ChoosePlace">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/choosePlace"
        android:visibility="visible"
        android:gravity="bottom|center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button"
            android:layout_marginBottom="15dp"
            android:id="@+id/btnHaNoi"
            android:text="@string/ha_noi"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:id="@+id/btnHoChiMinh"
            android:background="@drawable/shape_button"
            android:text="@string/ho_chi_minh"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chooseMode"
        android:visibility="gone"
        android:gravity="bottom|center"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop_mode"
            android:id="@+id/btnShopMode"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_button"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ship_mode"
            android:id="@+id/btnShipMode"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_button"
            />
    </LinearLayout>

</LinearLayout>
