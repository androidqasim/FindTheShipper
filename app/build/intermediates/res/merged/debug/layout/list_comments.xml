<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_comment"
    app:cardCornerRadius="10dp"
    card_view:cardElevation="3dp"
    android:layout_margin="5dp"
    card_view:contentPadding = "4dp"
    android:clickable="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgAvatarComment"
                android:src="@drawable/ic_your_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/txtUserNameComment"
                android:text="@string/app_name"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/txtDatetimeComment"
            android:text="@string/app_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtContentComment"
            android:layout_height="wrap_content"
            android:text="@string/choosing_places_success"
            android:background="@drawable/shape_edittext"
            android:textSize="20sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>